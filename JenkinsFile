pipeline {
    agent any
    stages {
        stage('Clonage du dépôt GitHub') {
            steps {
                git branch: ‘main’, url : 'https://github.com/csurqunix/OSDetector.git'
            }
        }
        stage('Setup Python') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install -y python3.11 python3.11-venv python3.11-dev'
                sh 'curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py'
                sh 'python3.11 get-pip.py'
            }
        }
        stage('Run Python Script') {
            steps {
                sh 'python3.11 -m venv venv'
                sh 'source venv/bin/activate'
                sh 'pip install -r requirements.txt'
                sh 'python script.py'
            }
        }
    }
}

